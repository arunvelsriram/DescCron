<idea-plugin>
    <id>dev.arunvelsriram.desccron</id>
    <name>DescCron</name>
    <vendor email="arunvelsriram@gmail.com" url="https://arunvelsriram.dev">Arunvel Sriram</vendor>

    <idea-version since-build="193"/>

    <description><![CDATA[
    DescCron (Describe Cron) is an IntelliJ plugin for descriptive view of cron expressions for humans.
    It's file format agnostic, as the cron expression to be described is a user selected text.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action class="dev.arunvelsriram.desccron.DescribeCronAction"
                id="org.intellij.sdk.action.GroupPopDialogAction"
                text="DescCron" description="SDK static grouped action example">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control shift D" second-keystroke="C"/>
        </action>
    </actions>
</idea-plugin>
